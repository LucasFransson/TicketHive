<div class="@($"search {(isOpen ? "open" : "")}")">
    <input type="search" class="search-box" />
    <span class="search-button" @onclick="@ToggleSearch">
        <span class="search-icon"></span>
    </span>
</div>

@code {
    private bool isOpen = false;

    private void ToggleSearch()
    {
        isOpen = !isOpen;
    }
}